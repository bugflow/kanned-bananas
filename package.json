{
  "name": "kanned-bananas",
  "version": "0.0.1",
  "description": "Tools to help manage and report on projects using kanban",
  "homepage": "https://github.com/bugflow/kanned-bananas",
  "repository": "git@github.com:bugflow/kanned-bananas.git",
  "author": {
    "name": "Bugflow",
    "url": "https://github.com/bugflow"
  },
  "license": "GPL-3.0",
  "private": false,
  "files": [
    "lib",
    "dist"
  ],
  "main": "lib/kanned-bananas.cjs.js",
  "module": "lib/kanned-bananas.esm.js",
  "bin": {
    "kb": "dist/cli.js"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "dotenv": "^8.2.0",
    "graphql-request": "^1.8.2",
    "luxon": "^1.22.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "babel-jest": "^24.1.0",
    "eslint": "^5.13.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.6.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.2.2",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.16.4",
    "rollup": "^1.27.4",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-terser": "^5.1.2",
    "typescript": "^3.8.2"
  },
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "format": "prettier --write 'src/*.{js,json}'",
    "go": "yarn build && yarn script",
    "lint": "eslint 'src/*.js' --quiet",
    "script": "node dist/cli.js",
    "test": "jest --coverage",
    "typecheck": "tsc"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:jest/recommended",
      "plugin:jest/style",
      "prettier"
    ],
    "env": {
      "es6": true,
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error",
      "no-console": "off",
      "import/prefer-default-export": "off"
    },
    "plugins": [
      "jest",
      "prettier"
    ]
  },
  "prettier": {
    "trailingComma": "all"
  }
}
